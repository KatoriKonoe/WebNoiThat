}

<h3 class="product_title">Chi Tiết Sản Phẩm</h3>
<div class="prod_box">
    <a href="#" class="module a">
        <h3 class="product_title">   @Model.TENDV</h3>
        <img class="product_img" src="~/images/@Model.HIANH" width="150" />
        <p class="prod_price">@Model.GIABANHT VNĐ</p>
        <div class="specifications">
            Mô Tả: <span class="blue">@Model.MOTA</span><br />
            Số Lượng: <span class="blue">@Model.Soluongton </span>><br />
        </div>
        <div class="dathang">
            <a href="@Url.Action("ThemGiohang", "Giohang" , new { @iMADV = @Model.MADV, @strURL=Request.Url.ToString()})" class="list-group-item">ĐẶT HÀNG</a>            
        </div>
    </a>
</div>
